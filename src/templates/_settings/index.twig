{% import '_includes/forms' as forms %}

{{ forms.autosuggestField({
    first: true,
    label: 'Varnish server IP'|t('varnishpurge'),
    name: 'ip',
    value: settings.ip,
    suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
    label: 'Varnish server PORT'|t('varnishpurge'),
    name: 'port',
    value: settings.port,
    suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
    label: 'Varnish server VERSION'|t('varnishpurge'),
    name: 'version',
    value: settings.version,
    suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
    label: 'Varnish server SECRET'|t('varnishpurge'),
    name: 'secret',
    value: settings.secret,
    suggestEnvVars: true
}) }}

{{ forms.autosuggestField({
    label: 'Sections to purge on save'|t('varnishpurge'),
